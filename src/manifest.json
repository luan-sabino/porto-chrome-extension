{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "porto_data_extraction",
  "author": "Luan Sabino",
  "description": "Export data from porto crm platform",
  "homepage_url": "https://github.com/luan-sabino",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "declarativeContent"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "options_page": "options/index.html",
  "action": {
    "default_icon": {
      "16": "icons/icon_16.png",
      "32": "icons/icon_32.png",
      "48": "icons/icon_48.png"
    },
    "default_title": "porto_data_extraction",
    "default_popup": "popup/index.html"
  },
  "content_scripts": [{
    "matches": ["*://portalmulticanal.microsoftcrmportals.com/*"],
    "run_at": "document_start",
    "js": ["xlsx.full.min.js","jquery-3.7.0.min.js","injection/contentscript.js","injection/inject.js"]
  }],
  "web_accessible_resources": [{
    "resources": ["injection/injected.js"],
    "matches": ["*://portalmulticanal.microsoftcrmportals.com/*"]
  }],
  "host_permissions": [
    "https://*/"
  ]
}